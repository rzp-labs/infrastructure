# Zitadel configuration
# PUBLIC domain is the actual hostname served by Traefik (e.g. auth.example.com)
# ORG domain controls the default suffix appended to usernames (e.g. example.com)
ZITADEL_PUBLIC_DOMAIN=auth.example.com
ZITADEL_ORG_DOMAIN=example.com
ZITADEL_MASTERKEY=replace-with-32-byte-hex
ZITADEL_TLS_MODE=external  # options: external, enabled, disabled
ZITADEL_SERVER_PORT=8080
ZITADEL_COMMAND=start  # use start-from-init only for the first bootstrap run

# Database settings
ZITADEL_DB_NAME=zitadel
ZITADEL_DB_ADMIN_USER=postgres
ZITADEL_DB_ADMIN_PASSWORD=change-me-admin
ZITADEL_DB_USER=zitadel
ZITADEL_DB_PASSWORD=change-me

# First instance bootstrap
ZITADEL_ORG_NAME=Your Org
ZITADEL_PROJECT_NAME=Your Project
ZITADEL_MACHINE_KEY_NAME=automation
ZITADEL_MACHINE_KEY_EXPIRATION=2030-01-01T00:00:00Z
ZITADEL_LOGINCLIENT_USERNAME=login-client
ZITADEL_LOGINCLIENT_NAME=Automation Login Client
ZITADEL_LOGINCLIENT_PAT_EXPIRATION=2030-01-01T00:00:00Z

# Admin bootstrap user (use a full email address for the username)
ZITADEL_ADMIN_USERNAME=admin@example.com
ZITADEL_ADMIN_FIRST_NAME=Any
ZITADEL_ADMIN_LAST_NAME=Name
ZITADEL_ADMIN_DISPLAY_NAME=Any Name
ZITADEL_ADMIN_EMAIL=admin@example.com
ZITADEL_ADMIN_PASSWORD=ChangeMeNow!
